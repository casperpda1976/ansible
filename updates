---
- name: Update Debian systems
  hosts: debian
  become: yes
  gather_facts: yes

  tasks:

    - name: Update apt package index
      apt:
        update_cache: yes
        cache_valid_time: 3600

    - name: Upgrade all installed packages
      apt:
        upgrade: full

    - name: Autoremove unused packages
      apt:
        autoremove: yes

    - name: Autoclean apt cache
      apt:
        autoclean: yes

    - name: Reboot if required
      reboot:
        msg: "Reboot initiated by Ansible after system update"
        connect_timeout: 5
        reboot_timeout: 600
        pre_reboot_delay: 5
        post_reboot_delay: 15
      when: ansible_facts.packages is undefined and ansible_facts['os_family'] == "Debian"
        or ansible_reboot_required | default(false)
